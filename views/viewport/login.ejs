<link rel="stylesheet" href="/css/login.css">
<body>
  <div class="form-side">
    <div class="logo-header">
      <img src='/public/images/Assets/logo.svg' alt='PNB logo' />
      <h2>Project. Night. Blog.</h2>
    </div>
    <div class="content-container">
      <section class="content">
        <header>
          <h1>Welcome back,</h1>
          <h5><span>please enter your details below.</span></h5>
        </header>
        <form action="/loginLocal" method="POST">
          <fieldset>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Email"
            />
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Password"
            />
            <button type="submit" class="btn">Login</button>
          </fieldset>
        </form>
        <footer>
          <h4>Don't have an account? <a href="/register"> Register for free!</a></h4>
          <h4 class="border"><span class="span2">or login with<span></h4>
          <ul>
            <li><a href="#"><img class="socialIcon" src="/public/images/google.png"></a></li>
            <li><a href="#"><img class="socialIcon" src="/public/images/facebook.png"></a></li>
            <li><a href="#"><img class="socialIcon" src="/public/images/github.png"></a></li>
            <li><a href="#"><img class="socialIcon" src="/public/images/twitter.png"></a></li>
          </ul>
        </footer>
      </section>
    </div>
  </div>
  <div class="graphic-side">
    <img class='graphic' src="/public/images/1.jpg" />
  </div>
</body>