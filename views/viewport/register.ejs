<link rel="stylesheet" href="/css/login.css">
<div id="component">
    <h1>Register</h1>
    <form action="/register/registerUser" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
    <div>
        <h4>Or Register With:</h4>
            <div>
                <a href="#"><img class="socialIcon" src="images/google.png"></a>
                <a href="#"><img class="socialIcon" src="images/facebook.png"></a>
                <a href="#"><img class="socialIcon" src="images/github.png"></a>
                <a href="#"><img class="socialIcon" src="images/twitter.png"></a>
            </div>
    </div>
</div>