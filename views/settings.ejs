<div class="settingsPage">
    
    <div class="settingsNav">
        <div class="settingsLogo"><a href="/"><img class="logo-img" src="/images/assets/logo.svg" alt="Project Night Blog Logo. Click to return to homepage." /></a></div>
        <%- include('partials/Navbar.ejs') %>
    </div>

    <div class="settingsWrapper">
        <div class="settingsHeaderWrapper">
            <div class="settingsHeader">
                <div>Settings</div>
                <i class="fa-solid fa-gear"></i>
            </div>
        </div>
        
        <div class="settingsUtils">
            <div>Your Account</div>
            <div>Display</div>
            <div>Logout</div>
        </div>
    </div>

    <div class="settingsContentWrapper">

        <div class="settingsContentHeader">
            <div>Your Account</div>
            <p>See information about your account or check your account deactivation options</p>
        </div>
        <div class="settingsContentUtils">
            <div class="accountInfo">
                <i class="fa-solid fa-user"></i>

                <div class="accountInfoContent">
                    <div>Account Information</div>
                    <p>See your account information like your username and email address</p>
                </div>

                <i class="fa-solid fa-angle-right"></i>
            </div>

            <div class="accountInfo">
                <i class="fa-solid fa-user"></i>

                <div class="accountInfoContent">
                    <div>Change Your Password</div>
                    <p>Change your password at any time</p>
                </div>

                <i class="fa-solid fa-angle-right"></i>
            </div>

            <div class="accountInfo">
                <i class="fa-solid fa-user"></i>

                <div class="accountInfoContent">
                    <div>Deactivate Your Account</div>
                    <p>Find out how you can deactivate your account</p>
                </div>

                <i class="fa-solid fa-angle-right"></i>
            </div>
        </div>

    </div>

</div>
<script src="https://cdn.tailwindcss.com"></script>